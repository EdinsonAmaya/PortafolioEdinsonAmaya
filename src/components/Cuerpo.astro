---
import "../styles/global.css";
import TarjetaProyectos from "./TarjetaProyectos.astro";
import { getCollection } from "astro:content";

const TodosLosProyectos = await getCollection("proyectos");
---

<div class="space-y-6 container mx-auto text-center items-center">
    <div
        class="container flex flex-col md:flex-row justify-center items-stretch mx-auto gap-8 my-2 px-4"
    >
        <div
            class="md:w-1/3 bg-white rounded-lg flex flex-col justify-center items-center text-center p-6"
        >
            <img
                src="https://static.vecteezy.com/system/resources/previews/007/296/443/non_2x/user-icon-person-icon-client-symbol-profile-icon-vector.jpg"
                alt="Desarrollador backend"
                class="w-32 h-32 rounded-full border-4 border-gray-50 mb-4"
            />
            <p class="bungee-regular text-3xl lg:text-4xl leading-tight mb-2">
                Edinson Arley Amaya Ariza
            </p>
            <h1 class="bungee-regular text-xl text-blue-600 leading-tight">
                Ingeniero De Sistemas | Full Stack Developer.
            </h1>
        </div>

        <div
            class="md:w-1/3 bg-white rounded-lg flex flex-col justify-center items-center text-center p-8"
        >
            <p class="bungee-regular text-2xl leading-tight text-gray-800">
                Sobre mí
            </p>
            <p class="text-lg text-gray-600 max-w-xl leading-relaxed">
                Ingeniero de Sistemas apasionado por el desarrollo de software
                de alto impacto y la arquitectura de sistemas. Mi enfoque se
                centra en la creación de soluciones eficientes y escalables,
                combinando una sólida base técnica con una mentalidad de
                aprendizaje continuo y adaptabilidad tecnológica. Estoy
                comprometido con la implementación de mejores prácticas y la
                entrega de código de calidad que aporte valor real al negocio.
            </p>
        </div>
    </div>

    <div
        class="container flex flex-col md:flex-row justify-center items-center mx-auto text-cencontainer flex flex-col md:flex-row justify-center items-center mx-auto text-center md:space-x-8 my-16"
    >
        <div
            class="md:w-2/3 bg-white rounded-lg mx-auto items-center text-center
             py-8"
        >
            <p class="bungee-regular text-2xl leading-tight my-2">
                Experiencias.
            </p>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                A lo largo de mi formación profesional, he liderado y
                desarrollado diversos proyectos técnicos donde he aplicado
                metodologías ágiles y patrones de diseño avanzados. Mi
                experiencia práctica se traduce en la capacidad de transformar
                requerimientos complejos en aplicaciones funcionales,
                gestionando el ciclo de vida completo del desarrollo y
                garantizando la estabilidad de los sistemas implementados.
            </p>
        </div>
    </div>
    <div
        class="container flex flex-col md:flex-row justify-center items-center mx-auto text-cencontainer flex flex-col md:flex-row justify-center items-center mx-auto text-center md:space-x-8 my-16"
    >
        <div
            class="md:w-2/3 bg-white rounded-lg mx-auto items-center text-center"
        >
            <p class="bungee-regular text-2xl leading-tight text-gray-800">
                Core Stack & Especialidades
            </p>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                Conocimientos en desarrollo integral con dominio en Java y
                Python para arquitecturas de Backend. Integro interfaces
                dinámicas y fluidas utilizando la agilidad de JavaScript en el
                Frontend. Mi trabajo se fundamenta en la implementación de
                Arquitecturas Limpias (Clean Architecture) y el diseño de bases
                de datos sólidas, asegurando sistemas mantenibles y de alto
                rendimiento.
            </p>

            <div class="flex gap-4 justify-center items-center mx-auto my-6">
                <button class="bg-blue-500 text-white px-6 py-3 rounded-lg"
                    >Explora mi GitHub</button
                >
                <button class="bg-gray-500 text-white px-6 py-3 rounded-lg"
                    >Contactame</button
                >
            </div>
        </div>
    </div>

    <div>
        <h2 class="bungee-regular text-2xl leading-tight my-2">
            Proyectos Personales
        </h2>
    </div>

    <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {
                TodosLosProyectos.map((proyecto: any) => (
                    <div class="flex h-full">
                        <TarjetaProyectos
                            titulo={proyecto.data.titulo}
                            descripcion={proyecto.data.descripcion}
                            imagen={proyecto.data.imagen}
                            urlRepositorio={proyecto.data.urlRepositorio}
                            etiquetas={proyecto.data.etiquetas}
                        />
                    </div>
                ))
            }
        </div>
    </div>

    <section id="contacto" class="border-t border-slate-200 py-16 bg-slate-50">
        <div class="max-row mx-auto px-6 text-center">
            <h3 class="text-3xl font-bold text-slate-800 mb-4">
                Datos de contacto.
            </h3>

            <div
                class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto"
            >
                <a
                    href="https://www.linkedin.com/in/edinson-amaya-ariza-47a1ab27a/"
                    class="flex items-center justify-center gap-3 p-4 bg-white border-2 border-slate-200 rounded-xl hover:border-blue-600 hover:shadow-lg transition-all group"
                >
                    <span
                        class="font-semibold text-slate-700 group-hover:text-blue-600"
                        >LinkedIn</span
                    >
                </a>

                <a
                    href="https://github.com/EdinsonAmaya"
                    class="flex items-center justify-center gap-3 p-4 bg-white border-2 border-slate-200 rounded-xl hover:border-black hover:shadow-lg transition-all group"
                >
                    <span
                        class="font-semibold text-slate-700 group-hover:text-black"
                        >GitHub</span
                    >
                </a>

                <a
                    href="mailto:edinsonamaya31@gmail.com"
                    class="flex items-center justify-center gap-3 p-4 bg-white border-2 border-slate-200 rounded-xl hover:border-red-500 hover:shadow-lg transition-all group"
                >
                    <span
                        class="font-semibold text-slate-700 group-hover:text-red-500"
                        >Email Profesional</span
                    >
                </a>
            </div>

            <div class="mt-12">
                <a
                    href="CV Edinson Amaya - Ing. Sistemas.pdf"
                    download
                    class="inline-block px-8 py-3 bg-blue-600 text-white font-bold rounded-lg shadow-md hover:bg-blue-700 transition-colors"
                >
                    Descargar CV (PDF)
                </a>
            </div>
        </div>
    </section>
</div>
